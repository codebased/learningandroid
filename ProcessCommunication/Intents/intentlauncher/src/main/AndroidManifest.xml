<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.imcodebased.customintentlauncher"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.imcodebased.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.imcodebased.activities.FirstActivity">
            <intent-filter>
                <action android:name="com.imcodebased.activities.FirstActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name="com.imcodebased.activities.SecondActivity">
            <intent-filter>
                <action android:name="com.imcodebased.activities.SecondActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>